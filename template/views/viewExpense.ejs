<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
    <title>BillBuddy</title>
    <link rel="icon" type="image/x-icon" href="/images/edit.png">
  </head>
  <body>
    <div  class="container mt-5" style="width:30%; border-radius: 5px; padding-left: 100px;align-self: center;" >
      <a href="/html/page1.html"><button type="button" class="btn btn-primary" style="text-align: center;">Home</button></a>
    </div>
    <div class="container mt-5 shadow-lg p-5" style="width:50%"><table class="table">
      <thead>
        <tr>
          
          <th scope="col">Expense</th>
          <th scope="col">Amount</th>
          <th scope="col">Category</th>
          <th>Saving Remaining</th>
        </tr>
      </thead>
      <tbody>
        <% if(found === true) { %>
            <% record.forEach(function(details){ %>
              <tr>
                <td><%= details.expense %></td>
                <td><%= details.amount %></td>
                <td><%= details.category %></td>
              </tr>
            <% }) %>
        <% } else { %>
          <h1>No data found!!</h1>
        <% } %>
      </tbody>
    </table></div>
    <div class="container mt-5" style="width:30%; border-radius: 5px; padding-left: 100px; align-self: center;" >
      <a href="/html/addExpense.html"><button action="button" class="btn btn-primary">Add Expense</button></a> 
    </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


  </body>
</html>
